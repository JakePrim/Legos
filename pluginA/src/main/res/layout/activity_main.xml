<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World! 我是插件A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pluginA_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/pluginA_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳转插件内的Activity" />

    <Button
        android:id="@+id/pluginA_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动插件内的Service" />

    <Button
        android:id="@+id/pluginA_btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="动态注册广播"/>

    <Button
        android:id="@+id/pluginA_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送广播" />

</LinearLayout>